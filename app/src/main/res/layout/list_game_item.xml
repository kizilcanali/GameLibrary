<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            />
        <TextView
            android:id="@+id/gameNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:paddingHorizontal="10dp"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Grand Theft Auto V"
            />
        <TextView
            android:id="@+id/gameGenreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gameNameText"
            android:paddingHorizontal="10dp"
            tools:text="Action, Role Play"
            />
        <TextView
            android:id="@+id/metacriticText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/gameGenreText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="78"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="#8BC34A"
            />

        <TextView
            android:id="@+id/releaseDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/metacriticText"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="5dp"
            tools:text="08-12-2021"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
